<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register" >

    <!-- Registration Form -->

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="-1dp"
        android:layout_y="61dp"
        android:text="@string/c_register_submit" />

    <EditText
        android:id="@+id/reg_phone"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_x="179dp"
        android:layout_y="340dp"
        android:inputType="phone"
        android:singleLine="true" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_x="179dp"
        android:layout_y="253dp"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_x="179dp"
        android:layout_y="297dp"
        android:inputType="textEmailAddress"
        android:singleLine="true" />

    <Spinner
        android:id="@+id/reg_country"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_x="179dp"
        android:layout_y="382dp"
        android:drawSelectorOnTop="true"
        android:prompt="@string/c_register_prompt" />

    <CheckBox
        android:id="@+id/reg_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="437dp"
        android:text="@string/c_register_terms"
        android:textColor="@color/terms_color" />

    <CheckBox
        android:id="@+id/reg_information"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_x="85dp"
        android:layout_y="490dp"
        android:text="@string/c_register_samsung_info"
        android:textColor="@color/terms_color" />

    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="121dp"
        android:layout_height="34dp"
        android:layout_x="192dp"
        android:layout_y="559dp"
        android:background="@drawable/continue_btn" />

</AbsoluteLayout>