<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register" >

    <!-- Registration Form -->

    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="121dp"
        android:layout_height="34dp"
        android:layout_x="586dp"
        android:layout_y="555dp"
        android:background="@drawable/continue_btn" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_x="109dp"
        android:layout_y="520dp"
        android:background="@drawable/continue_btn" />

    <CheckBox
        android:id="@+id/reg_information"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_x="108dp"
        android:layout_y="470dp"
        android:text="@string/c_register_samsung_info"
        android:textColor="@color/terms_color"
        android:textSize="10dp" />

    <CheckBox
        android:id="@+id/reg_terms"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="423dp"
        android:text="@string/c_register_terms"
        android:textColor="@color/terms_color"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/reg_phone"
        android:layout_width="152dp"
        android:layout_height="30dp"
        android:layout_x="175dp"
        android:layout_y="320dp"
        android:inputType="phone"
        android:singleLine="true" />

    <Spinner
        android:id="@+id/reg_country"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_x="174dp"
        android:layout_y="355dp"
        android:drawSelectorOnTop="true"
        android:prompt="@string/c_register_prompt" />

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="152dp"
        android:layout_height="30dp"
        android:layout_x="176dp"
        android:layout_y="282dp"
        android:inputType="textEmailAddress"
        android:singleLine="true" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="152dp"
        android:layout_height="30dp"
        android:layout_x="175dp"
        android:layout_y="241dp"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textSize="12dp" />

</AbsoluteLayout>