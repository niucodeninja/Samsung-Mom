            android:layout_y="114dp"
            android:background="@drawable/vote_menu_btn"
            android:paddingRight="20dp" />

        <Button
            android:id="@+id/ranking_menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="46dp"
            android:layout_y="242dp"
            android:background="@drawable/ranking_menu_btn" />

        <Button
            android:id="@+id/postulate_menu_btn"
